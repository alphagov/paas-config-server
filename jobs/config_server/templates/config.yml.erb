---
port: <%=p('port')%>
store: <%=p('store')%>

<% if p('store').casecmp('database') == 0 %>
database:
  adapter: <%=p('db.adapter')%>
  user: <%=p('db.user')%>
  password: <%=p('db.password')%>
  host: <%=p('db.host')%>
  port: <%=p('db.port')%>
  db_name: <%=p('db.database')%>
  connection_options:
    max_connections: <%=p('db.connection_options.max_connections')%>
    pool_timeout: <%=p('db.connection_options.pool_timeout')%>
<% end %>
